{
  "name": "remix-isomorphic-link",
  "version": "1.1.0",
  "description": "A wrapper component around Remix's Link / NavLink components and the native anchor element. One component to rule them all! Render an anchor tag for outgoing links and a Remix Link / NavLink for everything else! Also supports automated final slashes for all internal links (optional) to make your life easier working with Links in Remix!",
  "main": "dist/index.js",
  "module": "dist/index.es.js",
  "jsnext:main": "dist/index.es.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint .",
    "clean": "rimraf ./dist",
    "build": "npm run clean && rollup -c",
    "prepublish": "npm run lint && npm run test && npm run build",
    "publish:package": "npm run prepublish && npm publish",
    "dev": "rollup -c -w"
  },
  "keywords": [
    "Remix",
    "ReactRouter",
    "remix-router",
    "i18n",
    "anchor",
    "react",
    "link",
    "href",
    "to"
  ],
  "authors": [
    "Andre Landgraf <andre.timo.landgraf@gmail.com>"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/andrelandgraf/remix-isomorphic-link"
  },
  "homepage": "https://github.com/andrelandgraf/remix-isomorphic-linkt",
  "bugs": "https://github.com/andrelandgraf/remix-isomorphic-link/issues",
  "license": "MIT",
  "devDependencies": {
    "@remix-run/node": "^1.6.8",
    "@rollup/plugin-commonjs": "^20.0.0",
    "@testing-library/jest-dom": "^5.10.1",
    "@testing-library/react": "^13.1.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.23",
    "@types/react": "^17.0.43",
    "@types/react-dom": "^17.0.14",
    "@typescript-eslint/eslint-plugin": "^5.10.1",
    "@typescript-eslint/parser": "^5.10.1",
    "eslint": "^8.7.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "jest": "^27.2.0",
    "prettier": "^2.5.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rollup": "^2.70.1",
    "rollup-plugin-babel": "^4.4.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "tslib": "^2.3.1",
    "typescript": "^4.6.3"
  },
  "peerDependencies": {
    "@remix-run/react": "^1.6.8",
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  }
}
